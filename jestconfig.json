{
  "preset": "ts-jest",
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/test/",
    "/__tests__/"
  ],
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "src/**/*.{ts,js}",
    "!src/**/*.d.ts"
  ],
  "coverageReporters": ["json", "lcov", "text", "clover"]
}
